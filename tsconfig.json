{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "/@theme/*": ["src/.vitepress/theme/*"]
    }
  },
  "include": ["src/**/*", "src/.vitepress/**/*"]
}
